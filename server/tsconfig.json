{
    "include": ["src/**/*", "../shared/**/*"],
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@shared/*": ["../shared/*"]
      },
    }
  }